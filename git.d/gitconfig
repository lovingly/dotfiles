[alias]
	ci = commit
	cit = commit -a -m
	co = checkout
	df = diff --color-words --find-copies --find-renames --ignore-all-space
	l = log --color-words --decorate --find-copies --find-renames --oneline
	st = status --branch --short
	unstage = reset HEAD --
	graph = log --color --graph --pretty='format:%x09%h <%cn> %ci %s'
[color]
	ui = auto
[core]
	autocrlf = input
	quotepath = false
	precomposeunicode = true
[push]
	default = simple
[pull]
	rebase = preserve
[branch]
	autosetuprebase = always
[include]
	path = .gitconfig.local
[interactive]
	singlekey = true
[merge]
	ff = false
