repositories=~/.files/submodules/

## auto-fu.zsh stuff.
source ${repositories}/auto-fu.zsh/auto-fu.zsh
{ . ~/.zsh/auto-fu; auto-fu-install; }
zstyle ':auto-fu:highlight' input bold
zstyle ':auto-fu:highlight' completion fg=black,bold
zstyle ':auto-fu:highlight' completion/one fg=white,bold,underline
zstyle ':auto-fu:var' postdisplay $'\n-azfu-'
zstyle ':auto-fu:var' track-keymap-skip opp
zle-line-init () {auto-fu-init;}; zle -N zle-line-init
zle -N zle-keymap-select auto-fu-zle-keymap-select
zle -N zle-line-init

zstyle ':completion:*' completer _oldlist _complete
zstyle ':auto-fu:var' autoable-function/skiplines '[[:space:]]#sudo pacman *' '[[:space:]]#rake *'

## for z.sh
source ${repositories}/z/z.sh
# そのうちフック使う
function precmd() {
  _z --add "$(pwd -P)"
}

## for zaw.zsh
source ${repositories}/zaw/zaw.zsh
bindkey '^H' zaw-history

source ${repositories}/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh

fpath=(${repositories}/zsh-completions/src $fpath)
